{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hyper Awareness",
  "version": "1.0.0",
  "identifier": "com.focustime.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": {
      "icons/tray-44x44.png": ".",
      "icons/32x32.png": "."
    },
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "entitlements.plist"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": true
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "title": "Hyper Awareness",
        "width": 380,
        "height": 580,
        "center": false,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": true,
        "skipTaskbar": false,
        "alwaysOnTop": true,
        "transparent": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
